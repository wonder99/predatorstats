<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/Layout_LW1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="46dp" >

        <Button
            android:id="@+id/Button_LW1"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_margin="3sp"
            android:background="@drawable/button_90_45"
            android:gravity="center_horizontal|top"
            android:lines="1"
            android:paddingTop="3dp"
            android:text="@string/playername"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Stat1_LW1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Button_LW1"
            android:layout_alignLeft="@+id/Button_LW1"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="15sp"
            android:clickable="false"
            android:text="@string/stat_init"
            android:textColor="#FFFF11"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Stat2_LW1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Button_LW1"
            android:layout_alignRight="@+id/Button_LW1"
            android:layout_marginBottom="3sp"
            android:layout_marginRight="15sp"
            android:clickable="false"
            android:text="@string/stat_init"
            android:textColor="#FFFF11"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Layout_C1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Layout_LW1"
        android:layout_alignBottom="@+id/Layout_LW1"
        android:layout_toRightOf="@+id/Layout_LW1" >

        <Button
            android:id="@+id/Button_C1"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_margin="3sp"
            android:background="@drawable/button_90_45"
            android:gravity="center_horizontal|top"
            android:lines="1"
            android:paddingTop="3dp"
            android:text="@string/playername"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Stat1_C1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Button_C1"
            android:layout_alignLeft="@+id/Button_C1"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="15sp"
            android:clickable="false"
            android:text="@string/stat_init"
            android:textColor="#FFFF11"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Stat2_C1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Button_C1"
            android:layout_alignRight="@+id/Button_C1"
            android:layout_marginBottom="3sp"
            android:layout_marginRight="15sp"
            android:clickable="false"
            android:text="@string/stat_init"
            android:textColor="#FFFF11"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Layout_RW1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Layout_C1"
        android:layout_alignBottom="@+id/Layout_C1"
        android:layout_toRightOf="@+id/Layout_C1" >

        <Button
            android:id="@+id/Button_RW1"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_margin="3sp"
            android:background="@drawable/button_90_45"
            android:gravity="center_horizontal|top"
            android:lines="1"
            android:paddingTop="3dp"
            android:text="@string/playername"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Stat1_RW1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Button_RW1"
            android:layout_alignLeft="@+id/Button_RW1"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="15sp"
            android:clickable="false"
            android:text="@string/stat_init"
            android:textColor="#FFFF11"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Stat2_RW1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Button_RW1"
            android:layout_alignRight="@+id/Button_RW1"
            android:layout_marginBottom="3sp"
            android:layout_marginRight="15sp"
            android:clickable="false"
            android:text="@string/stat_init"
            android:textColor="#FFFF11"
            android:textSize="12sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/Button_Row1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/Layout_LW1"
        android:layout_marginTop="9dp"
        android:background="@drawable/row_button_75_35"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/toggleButton1"
        android:layout_alignBottom="@+id/toggleButton1"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/toggleButton1"
        android:text="@string/tv_EditMode"
        android:textSize="20sp" />

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:layout_toLeftOf="@+id/Layout_RW1"
        android:minWidth="48dp" />

</RelativeLayout>